<%- include('partials/header') %> 

<main class="form-signin">
  <form action="/login" method="POST">
    <img class="mb-4" src="assets/suit/logo-1.png" alt="" width="100" height="100">
    <h1 class="h3 mb-3 fw-normal">LOG IN</h1>
    <% if (status === 'emailnotfound') { %>
      <%- include('partials/not-found') %>
      <% } else if (status === 'incorrectpassword' ) { %>
      <%- include('partials/incorrect-pass') %>
      <% } %>

     <div class="form-floating">
      <input type="username" class="form-control" id="username" name="username" placeholder="Username">
      <label for="floatingInput">Username</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="password" name="password" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>
    <button class="w-100 btn btn-lg btn-dark mb-5" type="submit">Sign in</button>
  </form>

  <%- include('partials/footer') %> 